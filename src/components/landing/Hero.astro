---
import BranchVisualization from './BranchVisualization.tsx';
---

<section class="relative min-h-screen overflow-hidden bg-background">
  <!-- Animated background layers representing strata -->
  <div class="absolute inset-0 overflow-hidden">
    <!-- Grid pattern -->
    <div class="absolute inset-0 bg-grid-pattern opacity-30" />

    <!-- Gradient glow from top -->
    <div class="absolute inset-x-0 -top-40 h-[500px] bg-strata-glow" />

    <!-- Animated strata layers -->
    <div class="absolute inset-0">
      <div class="strata-bg-layer strata-bg-1" style="--delay: 0s" />
      <div class="strata-bg-layer strata-bg-2" style="--delay: -5s" />
      <div class="strata-bg-layer strata-bg-3" style="--delay: -10s" />
    </div>

    <!-- Ambient orbs -->
    <div class="absolute top-1/4 left-1/4 w-[600px] h-[600px] rounded-full bg-terracotta/5 blur-[120px] animate-pulse-slow" />
    <div class="absolute bottom-1/4 right-1/4 w-[400px] h-[400px] rounded-full bg-strata-vector/5 blur-[100px] animate-pulse-slow" style="animation-delay: 2s" />
  </div>

  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="pt-24 pb-16 lg:pt-32 lg:pb-24">
      <!-- Badge -->
      <div class="flex justify-center mb-8">
        <a href="/changelog" class="group inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/5 border border-white/10 text-sm text-text-secondary hover:bg-white/10 hover:border-white/20 transition-all">
          <span class="flex h-2 w-2 relative">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-terracotta opacity-75"></span>
            <span class="relative inline-flex rounded-full h-2 w-2 bg-terracotta"></span>
          </span>
          <span>v0.12.5 — intelligent search is here</span>
          <svg class="w-4 h-4 text-text-muted group-hover:text-text-secondary transition-colors group-hover:translate-x-0.5 transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      </div>

      <!-- Main headline -->
      <div class="text-center max-w-4xl mx-auto">
        <h1 class="text-5xl sm:text-6xl lg:text-7xl font-bold tracking-tight mb-6">
          <span class="block text-text-primary">The embedded database</span>
          <span class="block gradient-text">with git-like powers</span>
        </h1>

        <p class="text-xl lg:text-2xl text-text-secondary max-w-2xl mx-auto mb-10 text-balance">
          Branch, time-travel, merge, and search — across six built-in data primitives. Built from scratch.
        </p>

        <!-- CTA buttons -->
        <div class="flex flex-col sm:flex-row items-center justify-center gap-4 mb-16">
          <a href="/docs/getting-started" class="group btn-primary text-lg px-8 py-4">
            Get Started
            <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </a>
          <a href="https://github.com/stratadb-labs/strata-core" target="_blank" rel="noopener noreferrer" class="group btn-secondary text-lg px-8 py-4">
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path fill-rule="evenodd" clip-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" />
            </svg>
            Star on GitHub
          </a>
        </div>
      </div>

      <!-- Interactive branch visualization -->
      <div class="relative max-w-4xl mx-auto">
        <div class="absolute -inset-4 bg-gradient-to-r from-terracotta/20 via-strata-vector/20 to-strata-kv/20 rounded-3xl blur-xl opacity-50" />
        <div class="relative bg-background-subtle/80 backdrop-blur-xl border border-white/10 rounded-2xl overflow-hidden">
          <BranchVisualization client:load />
        </div>
      </div>

      <!-- Stats row -->
      <div class="mt-20 grid grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="text-center group">
          <div class="text-4xl lg:text-5xl font-bold text-text-primary mb-2 group-hover:text-terracotta transition-colors">
            6
          </div>
          <div class="text-sm text-text-muted uppercase tracking-wider">Primitives</div>
        </div>
        <div class="text-center group">
          <div class="text-4xl lg:text-5xl font-bold text-text-primary mb-2 group-hover:text-terracotta transition-colors">
            250K+
          </div>
          <div class="text-sm text-text-muted uppercase tracking-wider">Ops/sec</div>
        </div>
        <div class="text-center group">
          <div class="text-4xl lg:text-5xl font-bold text-text-primary mb-2 group-hover:text-terracotta transition-colors">
            &lt;1ms
          </div>
          <div class="text-sm text-text-muted uppercase tracking-wider">Branch switch</div>
        </div>
        <div class="text-center group">
          <div class="text-4xl lg:text-5xl font-bold text-text-primary mb-2 group-hover:text-terracotta transition-colors">
            60+
          </div>
          <div class="text-sm text-text-muted uppercase tracking-wider">MCP Tools</div>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 flex flex-col items-center gap-2 text-text-muted">
    <span class="text-xs uppercase tracking-widest">Scroll</span>
    <div class="w-6 h-10 rounded-full border-2 border-current flex items-start justify-center p-2">
      <div class="w-1 h-2 bg-current rounded-full animate-bounce" />
    </div>
  </div>
</section>

<style>
  .strata-bg-layer {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      180deg,
      transparent 0%,
      rgba(224, 122, 95, 0.02) 20%,
      rgba(139, 92, 246, 0.02) 40%,
      rgba(59, 130, 246, 0.02) 60%,
      rgba(16, 185, 129, 0.02) 80%,
      transparent 100%
    );
    animation: strata-drift 20s ease-in-out infinite;
    animation-delay: var(--delay);
  }

  .strata-bg-1 {
    transform: translateY(-10%);
  }

  .strata-bg-2 {
    transform: translateY(0%);
    opacity: 0.7;
  }

  .strata-bg-3 {
    transform: translateY(10%);
    opacity: 0.5;
  }

  @keyframes strata-drift {
    0%, 100% {
      transform: translateY(0) scaleY(1);
    }
    50% {
      transform: translateY(-5%) scaleY(1.02);
    }
  }
</style>
