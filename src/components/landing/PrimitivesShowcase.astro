---
const primitives = [
  {
    name: 'KV Store',
    description: 'Key-value storage where every write is versioned. Full history, prefix scanning, and time-travel queries built in.',
    code: `db.kv.put("user:1", {"name": "Alice"})
db.kv.get("user:1")  # {"name": "Alice"}
db.kv.history("user:1")  # Every version, timestamped`,
    color: 'strata-kv',
    gradient: 'from-blue-500/20 to-blue-600/5',
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4" />`,
  },
  {
    name: 'Event Log',
    description: 'Append-only event streams for audit trails, replay debugging, and deterministic execution.',
    code: `db.events.append("actions", {"type": "click"})
db.events.list("actions", after=10, limit=5)
# Replay from any point in history`,
    color: 'strata-event',
    gradient: 'from-emerald-500/20 to-emerald-600/5',
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />`,
  },
  {
    name: 'State Cell',
    description: 'Single-value containers with compare-and-swap for safe concurrent access across processes.',
    code: `db.state.set("counter", 0)
db.state.cas("counter", 1, expected=0)  # OK
db.state.cas("counter", 2, expected=0)  # Fail`,
    color: 'strata-state',
    gradient: 'from-purple-500/20 to-purple-600/5',
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />`,
  },
  {
    name: 'JSON Store',
    description: 'Structured documents with path-based access and atomic partial updates.',
    code: `db.json.set("profile", "$.user", {"name": "Alice"})
db.json.get("profile", "$.user.name")  # "Alice"
db.json.set("profile", "$.user.role", "admin")`,
    color: 'strata-json',
    gradient: 'from-amber-500/20 to-amber-600/5',
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />`,
  },
  {
    name: 'Vector Store',
    description: 'Semantic similarity search with HNSW indexing for embeddings and RAG workflows.',
    code: `coll = db.vectors.create("docs", dimension=384)
coll.upsert("d1", embedding, metadata=meta)
coll.search(query_vec, k=5)`,
    color: 'strata-vector',
    gradient: 'from-pink-500/20 to-pink-600/5',
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />`,
  },
  {
    name: 'Branches',
    description: 'Fork, diff, and merge your entire data state. Instant branch creation with full isolation.',
    code: `db.branches.create("experiment")
db.checkout("experiment")
# ...make changes, then merge or delete`,
    color: 'strata-branch',
    gradient: 'from-terracotta/20 to-terracotta/5',
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 9l4-4 4 4m0 6l-4 4-4-4" />`,
  },
];
---

<section class="relative py-32 bg-background-subtle overflow-hidden">
  <!-- Background decoration -->
  <div class="absolute inset-0">
    <div class="absolute inset-y-0 left-0 w-1/2 bg-gradient-to-r from-background to-transparent" />
    <div class="absolute inset-y-0 right-0 w-1/2 bg-gradient-to-l from-background to-transparent" />
  </div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section header -->
    <div class="max-w-3xl mx-auto text-center mb-16">
      <span class="text-terracotta text-sm font-medium uppercase tracking-widest mb-4 block">
        Six Primitives
      </span>
      <h2 class="text-4xl lg:text-5xl font-bold text-text-primary mb-6">
        One database, every data type
      </h2>
      <p class="text-xl text-text-secondary">
        Purpose-built primitives that work together. Each optimized for specific workflows.
      </p>
    </div>

    <!-- Strata layers visualization -->
    <div class="space-y-4">
      {primitives.map((primitive, index) => (
        <div
          class={`strata-layer group relative bg-gradient-to-r ${primitive.gradient} backdrop-blur-sm rounded-2xl border border-white/5 overflow-hidden transition-all duration-300 hover:border-white/10 hover:scale-[1.01]`}
          style={`animation-delay: ${index * 100}ms`}
        >
          <div class="relative p-6 lg:p-8">
            <div class="grid lg:grid-cols-2 gap-8 items-center">
              <!-- Left side - info -->
              <div class="flex items-start gap-4">
                <div class={`flex-shrink-0 w-12 h-12 rounded-xl bg-${primitive.color}/10 flex items-center justify-center`}>
                  <svg class={`w-6 h-6 text-${primitive.color}`} fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <Fragment set:html={primitive.icon} />
                  </svg>
                </div>
                <div>
                  <h3 class="text-xl font-semibold text-text-primary mb-2 group-hover:text-terracotta transition-colors">
                    {primitive.name}
                  </h3>
                  <p class="text-text-secondary">
                    {primitive.description}
                  </p>
                </div>
              </div>

              <!-- Right side - code -->
              <div class="lg:text-right">
                <pre class="inline-block text-left bg-background/50 backdrop-blur rounded-lg p-4 text-sm font-mono text-text-secondary overflow-x-auto max-w-full"><code>{primitive.code}</code></pre>
              </div>
            </div>
          </div>

          <!-- Animated shine effect on hover -->
          <div class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none">
            <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/5 to-transparent translate-x-[-100%] group-hover:translate-x-[100%] transition-transform duration-1000" />
          </div>
        </div>
      ))}
    </div>

    <!-- Learn more link -->
    <div class="mt-12 text-center">
      <a href="/docs/concepts/primitives" class="inline-flex items-center gap-2 text-terracotta hover:text-terracotta-light transition-colors font-medium">
        Explore all primitives in detail
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  .strata-layer {
    opacity: 0;
    transform: translateY(20px);
    animation: strata-appear 0.6s ease-out forwards;
  }

  @keyframes strata-appear {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
