---
interface Props {
  title: string;
  description: string;
  features: {
    icon: string;
    title: string;
    description: string;
  }[];
  reverse?: boolean;
}

const { title, description, features, reverse = false } = Astro.props;
---

<section class="py-24 bg-background">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class:list={[
      'grid lg:grid-cols-2 gap-12 items-center',
      reverse && 'lg:grid-flow-dense'
    ]}>
      <!-- Text content -->
      <div class:list={[reverse && 'lg:col-start-2']}>
        <h2 class="text-3xl font-bold text-text-primary mb-4">
          {title}
        </h2>
        <p class="text-lg text-text-secondary mb-8">
          {description}
        </p>

        <div class="space-y-6">
          {features.map((feature) => (
            <div class="flex gap-4">
              <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-terracotta/10 flex items-center justify-center">
                <Fragment set:html={feature.icon} />
              </div>
              <div>
                <h3 class="font-semibold text-text-primary mb-1">
                  {feature.title}
                </h3>
                <p class="text-text-secondary text-sm">
                  {feature.description}
                </p>
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Illustration slot -->
      <div class:list={[reverse && 'lg:col-start-1']}>
        <slot />
      </div>
    </div>
  </div>
</section>
