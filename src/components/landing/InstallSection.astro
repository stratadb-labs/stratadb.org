---
import InstallTabs from './InstallTabs.tsx';
---

<section class="relative py-32 bg-background overflow-hidden">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section header -->
    <div class="max-w-3xl mx-auto text-center mb-16">
      <span class="text-terracotta text-sm font-medium uppercase tracking-widest mb-4 block">
        Get Started
      </span>
      <h2 class="text-4xl lg:text-5xl font-bold text-text-primary mb-6">
        Up and running in seconds
      </h2>
      <p class="text-xl text-text-secondary">
        Choose your preferred language and start building.
      </p>
    </div>

    <!-- Install methods -->
    <div class="max-w-3xl mx-auto">
      <InstallTabs client:load />
    </div>

    <!-- Quick links -->
    <div class="mt-16 flex flex-wrap items-center justify-center gap-6">
      <a href="/docs/getting-started" class="group flex items-center gap-3 px-6 py-3 bg-background-subtle border border-white/5 rounded-xl hover:border-white/10 transition-colors">
        <div class="w-10 h-10 rounded-lg bg-terracotta/10 flex items-center justify-center">
          <svg class="w-5 h-5 text-terracotta" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
          </svg>
        </div>
        <div>
          <div class="font-medium text-text-primary group-hover:text-terracotta transition-colors">Tutorial</div>
          <div class="text-sm text-text-muted">Step-by-step guide</div>
        </div>
      </a>

      <a href="/docs/reference/python-sdk" class="group flex items-center gap-3 px-6 py-3 bg-background-subtle border border-white/5 rounded-xl hover:border-white/10 transition-colors">
        <div class="w-10 h-10 rounded-lg bg-strata-kv/10 flex items-center justify-center">
          <svg class="w-5 h-5 text-strata-kv" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
          </svg>
        </div>
        <div>
          <div class="font-medium text-text-primary group-hover:text-terracotta transition-colors">Python SDK</div>
          <div class="text-sm text-text-muted">Full API reference</div>
        </div>
      </a>

      <a href="/docs/reference/node-sdk" class="group flex items-center gap-3 px-6 py-3 bg-background-subtle border border-white/5 rounded-xl hover:border-white/10 transition-colors">
        <div class="w-10 h-10 rounded-lg bg-strata-event/10 flex items-center justify-center">
          <svg class="w-5 h-5 text-strata-event" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
          </svg>
        </div>
        <div>
          <div class="font-medium text-text-primary group-hover:text-terracotta transition-colors">Node.js SDK</div>
          <div class="text-sm text-text-muted">TypeScript support</div>
        </div>
      </a>

      <a href="/playground" class="group flex items-center gap-3 px-6 py-3 bg-background-subtle border border-white/5 rounded-xl hover:border-white/10 transition-colors">
        <div class="w-10 h-10 rounded-lg bg-strata-vector/10 flex items-center justify-center">
          <svg class="w-5 h-5 text-strata-vector" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div>
          <div class="font-medium text-text-primary group-hover:text-terracotta transition-colors">Playground</div>
          <div class="text-sm text-text-muted">Try in browser</div>
        </div>
      </a>

      <a href="/docs/reference/mcp" class="group flex items-center gap-3 px-6 py-3 bg-background-subtle border border-white/5 rounded-xl hover:border-white/10 transition-colors">
        <div class="w-10 h-10 rounded-lg bg-strata-state/10 flex items-center justify-center">
          <svg class="w-5 h-5 text-strata-state" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
        </div>
        <div>
          <div class="font-medium text-text-primary group-hover:text-terracotta transition-colors">MCP Server</div>
          <div class="text-sm text-text-muted">For AI assistants</div>
        </div>
      </a>
    </div>
  </div>
</section>
